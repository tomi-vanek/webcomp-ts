{
  "name": "webcomp-ts",
  "version": "0.0.2",
  "description": "Base class for web components has basic boilerplate code to simplify custom element implementation",
  "main": "lib/web-comp.js",
  "module": "lib/web-comp.js",
  "types": "lib/web-comp.d.ts",
  "files": [
    "lib"
  ],
  "author": "tomi vanek",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --raw npm:serve npm:tsc-watch",
    "tsc-watch": "tsc --watch --project ./tsconfig.json",
    "clean": "rm -rf lib",
    "build": "tsc --project ./tsconfig.json",
    "serve": "live-server --port=3333",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint --project ./tsconfig.json",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm-run-all clean build",
    "preversion": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^4.1.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  }
}
