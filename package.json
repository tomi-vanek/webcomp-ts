{
  "name": "webcomp-ts",
  "version": "0.1.0",
  "description": "Base class for web components has basic boilerplate code to simplify custom element implementation",
  "main": "dist/web-comp.js",
  "module": "dist/web-comp.js",
  "types": "dist/web-comp.d.ts",
  "files": [
    "dist"
  ],
  "author": "tomi vanek",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all clean build watch",
    "// LIFECYCLE": "----------------------------------",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm-run-all clean build",
    "preversion": "npm-run-all clean build",
    "// WATCH": "----------------------------------",
    "watch": "npm-run-all clean copy:assets tsc -p watch:*",
    "watch:assets": "cpx -Cv \"./src/**/*.{html,css,svg,png,jpg,jpeg,ico}\" ./dist",
    "watch:tsc": "tsc --watch --project ./tsconfig.json",
    "watch:serve": "live-server --open='./dist/example/index.html' --port=8002",
    "// BUILD": "----------------------------------",
    "build": "npm-run-all clean tsc copy:assets",
    "copy:assets": "cpx -Cv \"./src/**/*.{html,css,svg,png,jpg,jpeg,ico}\" ./dist",
    "clean": "rm -rf lib",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "tsc": "tsc --project ./tsconfig.json",
    "lint": "tslint --project ./tslint.json",
    "serve": "http-server . -c-1 -p 3333"
  },
  "dependencies": {},
  "devDependencies": {
    "cpx": "^1.5.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  }
}
